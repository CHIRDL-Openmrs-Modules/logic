<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs.logic">

	<class name="LogicRule" table="logic_rule">
		<id name="id" type="int" column="id" unsaved-value="0"><generator class="native" /></id>
		<property name="uuid" type="string" length="38" not-null="true" />
		<property name="name" type="string" not-null="true" />
		<property name="description" type="string" />
		<property name="ruleContent" type="java.lang.String" column="rule" length="2048" />
		<property name="language" type="java.lang.String" column="language" not-null="true" length="255" />
		<property name="compileDate" type="java.util.Date" column="compile_date" />
		<property name="compileStatus" type="java.lang.String" column="compile_status" length="255" />
		<property name="className" type="java.lang.String" column="class_name" length="1024" />
		<many-to-one name="creator" class="org.openmrs.User" not-null="true" />
		<property name="dateCreated" type="java.util.Date" column="date_created" not-null="true" />
		<many-to-one name="changedBy" class="org.openmrs.User" column="changed_by" />
		<property name="dateChanged" type="java.util.Date" column="date_changed" />		
		<property name="retired" type="java.lang.Boolean" length="1" not-null="true"/>
		<many-to-one name="retiredBy" class="org.openmrs.User" column="retired_by" />
		<property name="dateRetired" type="java.util.Date" column="date_retired" />	
		<property name="retireReason" type="string" column="retire_reason" />
	</class>
	
    <class name="LogicRuleToken" table="logic_rule_token">   
        <id name="ruleTokenId" type="int" column="logic_rule_token_id"><generator class="native" /></id>
        <property name="uuid" type="string" length="38" not-null="true" />
        <property name="token" type="java.lang.String" not-null="true" length="256" />
        <property name="className" type="java.lang.String" column="class_name" not-null="true" length="512" />
        <property name="state" type="java.lang.String" length="512" />
        <many-to-one name="creator" class="org.openmrs.User" not-null="true" />
        <property name="dateCreated" type="java.util.Date" column="date_created" not-null="true" length="19" />
        <many-to-one name="changedBy" class="org.openmrs.User" column="changed_by" />
        <property name="dateChanged" type="java.util.Date" column="date_changed" length="19" />
        
        <set name="ruleTokenTags" table="logic_rule_token_tag">
            <key column="logic_rule_token_id" />
            <element column="tag" type="string" not-null="true" length="512" />
        </set>        
    </class>
</hibernate-mapping>
